@page
@model ReviewSite.Pages.Questionnaires.IndexModel

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
            <h2 class="text-primary">Questionnaire Sheet</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i>&nbsp;Fill Out Questionnaire
			</a>
		</div>
	</div>

	<br /><br />
    <div class="row">
        @foreach (var item in Model.Questionnaires)
        {
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text"><strong>Date of Birth:</strong> @item.BirthDate.ToString("dd MMMM yyyy")</p>

                        @if (!string.IsNullOrEmpty(item.Instagram))
                        {
                            <p class="card-text"><strong>Instagram:</strong> @item.Instagram</p>
                        }

                        @if (!string.IsNullOrEmpty(item.Telegram))
                        {
                            <p class="card-text"><strong>Telegram:</strong> @item.Telegram</p>
                        }

                        @if (!string.IsNullOrEmpty(item.Discord))
                        {
                            <p class="card-text"><strong>Discord:</strong> @item.Discord</p>
                        }

                        @if (!string.IsNullOrEmpty(item.Phone))
                        {
                            <p class="card-text"><strong>Phone:</strong> @item.Phone</p>
                        }

                        @if (!string.IsNullOrEmpty(item.DescribeYourself))
                        {
                            <p class="card-text"><strong>About Me:</strong> @item.DescribeYourself</p>
                        }

                        @if (!string.IsNullOrEmpty(item.FirstImpression))
                        {
                            <p class="card-text"><strong>First Impression:</strong> @item.FirstImpression</p>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>